{
  "npmClient": "npm",
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore: Release new version :rocket:"
    },
    "version": {
      "conventionalCommits": true
    },
    "bootstrap": {
      "hoist": [
        "react",
        "react-dom"
      ],
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
